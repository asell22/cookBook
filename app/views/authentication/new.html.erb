

<%= form_tag signin_path, class: "ui small form" do |f| %>
<h1 class="ui left aligned header">Sign In</h1>
  <% if @sign_in_error %>
    <p>
      <%= @sign_in_error %>
    </p>
  <% end %>

  <div class="five wide field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="five wide field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Sign in", class: "ui olive button" %>


<% end %>
