      <%= link_to "Other", search_path(cuisineother: true), class: "cuisine item", id: "cuisineother"%>
    </div>
  </div>
</div>

<%= form_tag(search_path, :method => "get", class: "ui small form search-form") do %>

<div class="five wide field">
  <%= text_field_tag :search, params[:search], class: "input", placeholder: "Search for Recipe"%>
</div>
<%= submit_tag "Search", :name => nil, class: "ui olive button search-button" %>
<% end %>

<div class="ui bottom segment">
  <h3 class="title"></h3>
  <% if @recipes.present? %>
      <% @recipes.each do |recipe| %>
        <%= link_to recipe.name, recipe %><br>
      <% end %>
  <% else %>
    <p>There are no recipes found</p>
  <% end %>
</div>
