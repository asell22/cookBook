  <div class="ui dropdown item">
    Food Type
    <div class="menu">
      <%= link_to "Main Course", search_path(maincourse: true), class: "type item", id:"maincourse" %>
      <%= link_to "Side Dish", search_path(sidedish: true), class: "type item", id: "sidedish" %>
